{
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "arrowParens": "always",
    "useTabs": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "importOrder": [
        "^@/",
        "^~/",
        "^~/types/",
        "^types/",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderCaseInsensitive": true,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 100
            }
        }
    ]
}